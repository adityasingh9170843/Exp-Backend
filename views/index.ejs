<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            class="block bg-zinc-700 px-5 py-2 w-full rounded-md"
            type="text"
            placeholder="Title goes here"
            name="title"
          />
          <textarea
            class="block w-full resize-none rounded-md mt-2 px-5 py-2 bg-zinc-700"
            placeholder="Write your task description"
            name="description"
          ></textarea>
          <input
            class="mt-2 bg-blue-600 rounded-md p-4"
            type="submit"
            value="create task"
          />
        </form>
      </div>
      <div class="tasks flex gap-3 flex-wrap">
        <% files.forEach((item) => { %>
        <div class="task bg-zinc-800 p-5 rounded-md m-5 text-white w-72">
          <h1 class="text-xl text-white tracking-tighter"><%= item %></h1>
          <div class="flex  align-center justify-between"> 
            <a href="/file/<%= item %>" class="text-blue-500 inline-block mt-3"
              >Read More</a
            >
            <a href="/edit/<%= item %>" class="text-red-500 mt-3">Edit</a>
          </div>
        </div>
        <% }) %>
        <h3 class="text-zinc-500 p-5 m-5">No tasks yet</h3>
      </div>
    </div>
  </body>
</html>
